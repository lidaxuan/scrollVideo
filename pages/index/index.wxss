}

.play {
  position: fixed;
  left: 50%;
  top: 50%;
  transform: translate(-50%,-50%);
  width: 128rpx;
  height: 128rpx;
}

.fullBtn {
  position: fixed;
  right: 0;
  color: #fff;
  top: 50%;
  height: 128rpx;
  background-color: pink;
}


.video-pic{
  width: 100vw;
  height: 100vh;
