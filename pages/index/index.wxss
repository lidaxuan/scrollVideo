}


/**index.wxss**/
.index{
  width: 100vw;
  height: 100vh;
  overflow: hidden;
}

.video-box {
  width: 100vw;
  height: 100vh;
  transition: all 0.4s cubic-bezier(1, 1, 0, 0.42);
  transform: translate(0%, 0%);
  position: relative;
}

.video-box .video-list {
  position: absolute;
  left: 0;
  width: 100vw;
  height: 100vh;
}

.video-box .video-list video {
  display: block;
  width: 100vw;
  height: 100vh;
}

